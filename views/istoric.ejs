<label for="data2"></label>
<input class="culoare" type="date" id="data2" name="data">
<button id="addEventButton2" class="butoane_trimitere">Selecteaza data</button>
<br><br>

<p style="color:rgb(0, 0, 0); font-size:30px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #7c7c7c, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;" >Istoric alimentar</p>

<!-- Display the selected date -->
<p id="selectedDateDisplay" style="color:rgb(0, 0, 0); font-size:25px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;" >Data selectata: <%= selectedDate %></p>

<% if (userData) { %>
<!-- Display the fetched data -->
<p style="color:rgb(0, 0, 0); font-size:20px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;" >Masa 1:</p>
<ul>
    <% for (const masa1Product of masa1Products) { %>
    <li style="color:rgb(0, 0, 0); font-size:15px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;"><%= masa1Product.name %></li>
    <% } %>
</ul>
<p style="color:rgb(0, 0, 0); font-size:20px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;">Calorii Masa 1: <%= userData.calorii_masa1 %></p>

<p style="color:rgb(0, 0, 0); font-size:20px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;">Masa 2:</p>
<ul>
    <% for (const masa2Product of masa2Products) { %>
    <li style="color:rgb(0, 0, 0); font-size:15px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;"><%= masa2Product.name %></li>
    <% } %>
</ul>
<p style="color:rgb(0, 0, 0); font-size:20px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;" >Calorii Masa 2: <%= userData.calorii_masa2 %></p>

<p style="color:rgb(0, 0, 0); font-size:20px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;" >Masa 3:</p>
<ul>
    <% for (const masa3Product of masa3Products) { %>
    <li style="color:rgb(0, 0, 0); font-size:15px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;"><%= masa3Product.name %></li>
    <% } %>
</ul>
<p style="color:rgb(0, 0, 0); font-size:20px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;" >Calorii Masa 3: <%= userData.calorii_masa3 %></p>
<p style="color:rgb(0, 0, 0); font-size:23px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;" >Calorii consumate: <%= userData.calorii_masa1 + userData.calorii_masa2 + userData.calorii_masa3 %></p>
<% } else { %>
<p style="color:rgb(0, 0, 0); font-size:25px; text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #fffcfc, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;">Va rugam selectati data pentru afisarea istoricului alimentar</p>
<% } %>




